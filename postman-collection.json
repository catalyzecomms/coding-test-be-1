{
  "info": {
    "name": "Posts API Collection",
    "description": "Complete CRUD operations for Posts API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Post",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"My First Blog Post\",\n  \"content\": \"This is the content of my first blog post. It contains some interesting information about NestJS and TypeORM.\",\n  \"publishedAt\": \"2024-01-15T10:00:00Z\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/posts",
          "host": ["{{baseUrl}}"],
          "path": ["posts"]
        }
      }
    },
    {
      "name": "Get All Posts",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/posts",
          "host": ["{{baseUrl}}"],
          "path": ["posts"]
        }
      }
    },
    {
      "name": "Get Post by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/posts/1",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "1"]
        }
      }
    },
    {
      "name": "Get Post by Slug",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/posts/slug/my-first-blog-post",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "slug", "my-first-blog-post"]
        }
      }
    },
    {
      "name": "Update Post",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Updated Blog Post Title\",\n  \"content\": \"This is the updated content of my blog post.\",\n  \"publishedAt\": \"2024-01-16T12:00:00Z\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/posts/1",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "1"]
        }
      }
    },
    {
      "name": "Delete Post (Soft Delete)",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/posts/1",
          "host": ["{{baseUrl}}"],
          "path": ["posts", "1"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ]
}
